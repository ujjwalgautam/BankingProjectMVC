@model IEnumerable<BankingProjectMVC.Models.Statement>

<div class="form-group">
                <label  class="control-label" >Current Balance</label>
                <input  class="form-control" value="@ViewBag.balance" readonly/>
                <span  class="text-danger" ></span>
            </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SenderAccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverAccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mode)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="color: @(item.Status ? "green" : "red")">
            <td>
                @Html.DisplayFor(modelItem => item.SenderAccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverAccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mode)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
          
        </tr>
}
    </tbody>
</table>
